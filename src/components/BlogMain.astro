---
import BaseHead from '../components/BaseHead.astro';
import BlogHeader from '../components/BlogHeader.astro';
import BlogPost from '../components/BlogPost.astro';
import HeadElement from '../components/Head.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const {content} = Astro.props;
const {title, description, publishDate, author, heroImage, permalink, alt} = content;
---
<!DOCTYPE html>
<html lang={ content.lang || 'en' }>
  <HeadElement >
      <BaseHead title={title} description={description} permalink={permalink} />
    <!-- <link rel="stylesheet" href="/blog.css" /> -->
  </HeadElement>
  <body class="fullscreen-sections-with-header-and-footer">
      <Header />
      <!-- <BlogHeader /> -->
      <BlogPost title={title} author={author} heroImage={heroImage} publishDate={publishDate} alt={alt}>
        <slot />
      </BlogPost>
    <Footer />
    <span class="mouse-chaser" style="--mouse-z: var(--header-z)"></span>
  </body>
</html>
