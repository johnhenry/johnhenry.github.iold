---
// // Component Imports
import SitePage from "./SitePage.astro";
import {SITE_TITLE, SITE_KEYWORDS, SITE_AUTHOR, SITE_CANONICAL_URL} from "../SETTINGS.mjs";
const pageLinks = [
  {url:'/blog', text:'Blog'},
  {url:'/#me', text:'Me'},
  {url:'/#projects', text:'Projects'}
];

const {content} = Astro.props;
const {title, description, publishDate, author, heroImage, permalink, alt, tags} = content;
const keywords = SITE_KEYWORDS.concat(tags);
const pageTitle = `${SITE_TITLE} -- Weblog: ${title}`;
---
<SitePage title={pageTitle} description={description} keywords={keywords} author={author} canonical={SITE_CANONICAL_URL + permalink} pageLinks ={pageLinks}>
    <main class="blog">
      <header class="latest">{title}</header>
      <section>
        {heroImage && <img width="360" height="210" class="hero-image" loading="lazy" src={heroImage} alt={alt} />}
        <p class="publish-date">{publishDate}</p>
        <header>{title}</header>
        <div class="author">
          <p>
            <a href="https://iamjohnhenry.com">
            {SITE_AUTHOR}
            </a>
            </p>
        </div>
        <slot />
      </section>
    </main>
</SitePage>